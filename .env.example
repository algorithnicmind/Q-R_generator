# Environment Variables Example
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/qr_generator

# For MongoDB Atlas (cloud), use:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/qr_generator

# Application
# This is the public URL where your app is hosted
# Used in QR codes for redirection
BASE_URL=http://localhost:3000

# For production, use your actual domain:
# BASE_URL=https://yourdomain.com

# Authentication
# Generate a random secret for JWT signing
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=30d

# Cloudinary (File Uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
